<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet"/>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr") 

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>      
                <div class="header-brand">
                    @Html.ActionLink("Voice", "latest", "sound", new { area = "" }, new { @class = "navbar-brand" })
                </div>
            </div>
                    


            <div class="navbar-collapse collapse">

                <ul class="nav navbar-nav">
                     <li>
                       @Html.ActionLink("Index", "latest", "sound")
                    </li>
                </ul>

             
           
                @*<div class="navbar-form" style="display:inline-block">        
                    <div class="input-group">
                        <input type="text" class="navbar-text-box form-control" placeholder="Поиск" />
                        <span class="input-group-addon">S</span>   
                    </div>           
               </div>*@


                <div class="navbar-form" style="display:inline-block">
                    <div class="input-group">
                        <input type="text" class="form-control" name="search-audio-area" />
                        <span class="input-group-addon" name="search-audio-btn">S</span>
                    </div>
                </div>
             
         
            
                    @if (User.Identity.IsAuthenticated)
                    {
                       <ul class="nav navbar-nav">
                           <li>
                               @Html.ActionLink(User.Identity.Name, "profile", "account")
                           </li>
                           <li>
                               @Html.ActionLink("Logout", "Logout", "account")
                           </li>        
                       </ul> 
                    }

                    else
                    {
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                @Html.ActionLink("Registration", "Registration", "account")
                            </li>
                            <li>
                                @Html.ActionLink("Log in", "Login", "account")
                            </li>
                        </ul>
                    }
            
            </div>          
        </div>
    </div>
    
    <div class="container body-content">
        @RenderBody()   
    </div>
   
      
       
  

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/player.js"></script>
    <script src="~/Scripts/layout.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>




